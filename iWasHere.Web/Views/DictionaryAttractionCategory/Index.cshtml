
@{
    ViewData["Title"] = "Index";
}

<h1>Categorii de bilete</h1><br />
<h4>Filtreaza dupa: </h4>

<form>
    <label>Tip atractie: </label>
    <input type="text" name="attractionCategory" value="" /><br />
    <a asp-area="" asp-controller="DictionaryAttractionCategory" asp-action="GetFilteredAttraction">Filtreaza</a>
</form>


@(Html.Kendo().Grid<iWasHere.Domain.DTOs.DictionaryAttractionCategoryModel>()
        .Name("grid")
        .Columns(columns =>
        {
           // columns.Bound(c => c.AttractionCategoryId);
            columns.Bound(c => c.AttractionCategoryName);
        })
        .HtmlAttributes(new { style = "height: 550px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(2)
            .Read(read => read.Action("GetAttractionCategory", "DictionaryAttractionCategory"))   
        )
)
<style>
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>