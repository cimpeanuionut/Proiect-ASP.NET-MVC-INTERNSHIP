@using Kendo.Mvc.UI
@{
    ViewData["Title"] = "Index";
}
<style>

    .myHeader {
         color: black;
        padding: 45px;
        text-align: center;
        font-family: Georgia;
        color: white;
        background-image:radial-gradient(red, black);
